<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.MaterialComponents"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.MainFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="100dp"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/last_seizure_descr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ostatni atak:"
                    android:layout_gravity="center_horizontal"
                    android:textSize="25sp"
                    android:textColor="@color/colorPrimaryDark"/>
                <TextView
                    android:id="@+id/last_seizure_numb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 dni temu"
                    android:layout_gravity="center_horizontal"
                    android:textSize="30sp"
                    android:textColor="@color/black"/>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/weekly_seizure_descr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="W tym tygodniu:"
                android:layout_gravity="center_horizontal"
                android:textSize="25sp"
                android:textColor="@color/colorPrimaryDark"/>
            <TextView
                android:id="@+id/weekly_seizure_numb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 atakÃ³w"
                android:layout_gravity="center_horizontal"
                android:textSize="30sp"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/last_series_descr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ostatnia seria:"
                android:layout_gravity="center_horizontal"
                android:textSize="25sp"
                android:textColor="@color/colorPrimaryDark"/>
            <TextView
                android:id="@+id/last_series_numb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 dni temu"
                android:layout_gravity="center_horizontal"
                android:textSize="30sp"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/weekly_series_descr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="W tym tygodniu:"
                android:layout_gravity="center_horizontal"
                android:textSize="25sp"
                android:textColor="@color/colorPrimaryDark"/>
            <TextView
                android:id="@+id/weekly_series_numb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 serii"
                android:layout_gravity="center_horizontal"
                android:textSize="30sp"
                android:textColor="@color/black"/>
        </LinearLayout>


    </LinearLayout>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btn_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="DODAJ"
        android:textAlignment="viewEnd"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:tint="@color/white"
        app:rippleColor="@color/black"
        app:icon="@drawable/ic_add_white"
        app:iconTint="@color/white"
        app:iconSize="25dp"
        />


</RelativeLayout>